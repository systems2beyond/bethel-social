rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow public read access (for the social feed)
      allow read: if true;
      
      // Allow write access only to authenticated users (admins)
      // For now, any signed-in user is considered an admin. 
      // In a real app, you'd check for specific custom claims or a user ID list.
      allow write: if request.auth != null;
    }
  }
}
