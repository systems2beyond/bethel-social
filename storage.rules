rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /groups/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /connect-form/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /member-registration/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /district_messages/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Task attachments for ministry assignments and personal tasks
    match /task_attachments/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024; // 5MB limit enforced
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
